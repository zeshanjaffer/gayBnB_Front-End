import 'swiper/css/pagination';

const PlacesSlider = () => {
  const slides = [
    {
      title: 'North America',
      imageUrl: '/north-america.jpg', // Replace with your image paths
    },
    {
      title: 'Europe',
      imageUrl: '/europe.jpg',
